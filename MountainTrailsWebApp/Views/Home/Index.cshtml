@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/Site.css")
</head>
<body>

    <!-- MAIN CONTENT -->
    <div class="container-fluid">

        <!-- HEADER -->

        <section id="header">
            <!-- SLIDER -->
            <div class="container" style="padding-top: 80px">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">

                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Sources/Images/muntii2.jpg" alt="Los Angeles">
                        </div>
                        <div class="item">
                            <img src="~/Sources/Images/muntii3.jpg" alt="Chicago">
                        </div>
                        <div class="item">
                            <img src="~/Sources/Images/muntii4.jpg" alt="New York">
                        </div>
                        <div class="item">
                            <img src="~/Sources/Images/muntii5.jpg" alt="New York">
                        </div>
                    </div>

                    <div class="nav-slide">
                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </div><!-- /.container-fluid -->

    <!-- ABOUT -->
    <section id="about" class="light">
        <div class="title">
            <h2>About <span>Us</span> </h2>
            <p>
                Ne propunem să îți prezentăm trasee turistice montane din munții României, încurajându-te să încerci!
            </p>
        </div>

        <div class="container">
            <div class="row table-row">
                <div class="col-sm-6 hidden-xs">
                    <div class="section-content">
                        <div class="big-image">
                            <img src="~/Sources/Images/back1.jpg">
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="section-content">

                        <div class="about-detail">
                            <h4> De ce e important să mergi pe munte</h4>
                            <p>
                                Unul din principalele motive este că natura e sublimă în tot ceea ce reprezintă ea. Muntele este
                                creația perfectă a naturii. La munte găsești nenumărate atracții. De la vârfuri impresionante, cascade
                                uimitoare, peșteri, chei, păduri dese, lacuri absolut memorabile, până la o faună extrem de diversificată
                                dublată de o floră de care nici nu credeai că există.
                            </p>
                        </div>

                        <div class="about-detail">
                            <h4> Cum să te echipezi corespunzător </h4>
                            <p>
                                În secțiunea <strong>Sfaturi</strong> vei găsi cele mai potrivite sfaturi pentru cel mai bun și frumos
                                traseu.
                            </p>
                        </div>

                        <div class="about-detail">
                            <h4> Daca nu ești hotărât </h4>
                            <p>
                                Poate te vor convinge statisticile din secțiunea <strong>Statistici</strong>.
                            </p>
                        </div>
                    </div>
                </div>
            </div> <!-- /.row table-row -->
        </div> <!-- /.container -->
    </section>

    <!-- PORTFOLIO -->
    <div id="portfolio" class="full-screen-portfolio">
        <div class="title">
            <h2> Pagini </h2>
            <p> Pentru a ajunge mai ușor la pagini, puteți da click pe fiecare poză în parte. </p>
        </div>

        <div class="container-fluid">

            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="portfolio-item">
                        <div class="thumb">
                            <div class="hover-effect">
                                <div class="hover-content">
                                    <h1> Trasee </h1>
                                </div>
                            </div>
                            <div class="image">
                                <a href="@Url.Action("Index", "TrailModelsList")" title="Trails View">
                                    <img src="~/Sources/Images/caro1.jpg">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="portfolio-item">
                        <div class="thumb">
                            <div class="hover-effect">
                                <div class="hover-content">
                                    <h1> Sfaturi utile</h1>
                                </div>
                            </div>
                            <div class="image">
                                <a href="@Url.Action("UsefulAdvices", "UsefulAdvices")" title="Advices View">
                                    <img src="~/Sources/Images/caro4.jpg">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="portfolio-item">
                        <div class="thumb">
                            <div class="hover-effect">
                                <div class="hover-content">
                                    <h1> Varfuri </h1>
                                </div>
                            </div>
                            <div class="image">
                                <a href="@Url.Action("Index", "PeakModelsList")" title="PeakModelsList View">
                                    <img src="~/Sources/Images/caro6.jpg">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="portfolio-item">
                        <div class="thumb">
                            <div class="hover-effect">
                                <div class="hover-content">
                                    <h1> Actiuni </h1>
                                </div>
                            </div>
                            <div class="image">
                                <a href="@Url.Action("Index", "Actions")" title="Add a trail View">
                                    <img src="~/Sources/Images/caro7.jpg">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="portfolio-item">
                        <div class="thumb">
                            <div class="hover-effect">
                                <div class="hover-content">
                                    <h1> Statistici </h1>
                                </div>
                            </div>
                            <div class="image">
                                <a href="@Url.Action("Index", "Statistics")" title="Statistics View">
                                    <img src="~/Sources/Images/caro8.jpg">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="portfolio-item">
                        <div class="thumb">
                            <div class="hover-effect">
                                <div class="hover-content">
                                    <h1> Contact </h1>
                                </div>
                            </div>
                            <div class="image">
                                <a href="@Url.Action("Contact", "EmailSetup")" title="Contact View">
                                    <img src="~/Sources/Images/caro2.jpg">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="portfolio-item">
                        <div class="thumb">
                            <div class="hover-effect">
                                <div class="hover-content">
                                    <h1> Munti </h1>
                                </div>
                            </div>
                            <div class="image">
                                <a href="@Url.Action("Index", "MountainModelsList")" title="MountainModelsList View">
                                    <img src="~/Sources/Images/caro6.jpg">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="portfolio-item">
                        <div class="thumb">
                            <div class="hover-effect">
                                <div class="hover-content">
                                    <h1> Log in</h1>
                                </div>
                            </div>
                            <div class="image">
                                <a href="@Url.Action("Login", "Account")" title="Login View">
                                    <img src="~/Sources/Images/img1.jpg">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="portfolio-item">
                        <div class="thumb">
                            <div class="hover-effect">
                                <div class="hover-content">
                                    <h1> Register </h1>
                                </div>
                            </div>
                            <div class="image">
                                <a href="@Url.Action("Register", "Account")" title="Register View">
                                    <img src="~/Sources/Images/thirdcateg.jpg">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

