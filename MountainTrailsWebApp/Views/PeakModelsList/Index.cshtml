@model IEnumerable<MountainTrailsWebApp.Models.PeakModels>

@{
    ViewBag.Title = "Lista varfurilor";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/PeaksList.css")
</head>
<body>
    <h4>
        <b> Lista varfurilor muntilor din Romania </b>
    </h4>
    <br />

    <table class="styled-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mountain.MountainName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeakName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mountain.MountainName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeakName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
