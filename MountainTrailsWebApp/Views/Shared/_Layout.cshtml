                    </ul>
                </li>

                <li>@Html.ActionLink("Contact", "Contact", "EmailSetup", new { area = "" }, new { @class = "nav-ddl" })</li>

            </ul>
        </div>

    </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Ivan Emilia-Ioana </p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
