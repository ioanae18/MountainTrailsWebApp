                        <li>@Html.ActionLink("Adaugă Munte", "Create", "MountainModels", new { area = "" }, new { @class = "nav-ddl" })</li>
                    </ul>
                </li>

                <li>@Html.ActionLink("Vârfuri", "Index", "PeakModelsList", new { area = "" }, new { @class = "nav-ddl" })</li>

                <li>@Html.ActionLink("Zone Montane", "Index", "MountainModelsList", new { area = "" }, new { @class = "nav-ddl" })</li>

                <li>@Html.ActionLink("Sfaturi Utile", "UsefulAdvices", "UsefulAdvices", new { area = "" }, new { @class = "nav-ddl" })</li>

                <li>
