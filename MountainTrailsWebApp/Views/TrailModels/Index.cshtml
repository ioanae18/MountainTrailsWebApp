                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdTrail }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdTrail }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdTrail }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
