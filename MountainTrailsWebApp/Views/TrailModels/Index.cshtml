@model IEnumerable<MountainTrailsWebApp.Models.TrailModels>

@{
    ViewBag.Title = "Index traseu";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/Trails.css")
</head>
<body>
    <br />
    <p>
        @Html.ActionLink("Create New", "Create", new {  }, new { @class = "btn btn-warning" })
